<% if @user.is_coach == false %>
  <div class="row m-3">
    <span class="h2 bg-light m-3"><%= @user.name %>さんのマイページ</span>
  </div>

  <div class="row">
    <div class="col-6">
      <%= attachment_image_tag(@user, :image , :fill, 400, 400, format: 'jpeg') %>
    </div>
    <div class="col-6">
      <table class="table">
        <tbody>
          <tr><th class="table-info">名前</th><td><%= @user.name %></td></tr>
          <tr><th class="table-info">メールアドレス</th><td><%= @user.email %></td></tr>
          <tr><th class="table-info">性別</th><td><%= @user.gender_i18n %></td></tr>
          <tr><th class="table-info">年齢</th><td><%= @user.age %>歳</td></tr>
          <tr><th class="table-info">スポーツ</th><td><%= @user.sport.name %></td></tr>
          <tr><th class="table-info">自己紹介</th><td><%= @user.introduction %></td></tr>
          <tr><th class="table-info">ユーザーステータス</th>
                <td>
                  <% if @user.is_deleted == true %>
                    <span class="text-secondary">退会</span>
                  <% elsif @user.is_deleted == false %>
                    <span class="text-success">有効</span>
                  <% end %>
                </td></tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to '編集する', edit_user_registration_path(@user.id), class:"btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-5 text-center">
      <%#= link_to '受講コーチング履歴', coaching_index_path, class:"btn btn-success btn-lg" %>受講コーチング履歴ボタン作成
    </btn>
  </div>

  <div class="row">
    <div class="col-5 text-center">
      <%#= link_to 'コーチング申請一覧', matching_index_path, class:"btn btn-success btn-lg" %>コーチング申請一覧ボタン作成
    </btn>
  </div>

<% else %>

  <div class="row m-3">
    <span class="h2 bg-light m-3"><%= @user.name %>コーチのマイページ</span>
  </div>

  <div class="row">
    <div class="col-6">
      <%= attachment_image_tag(@user, :image , :fill, 400, 400, format: 'jpeg') %>
    </div>
    <div class="col-6">
      <table class="table">
        <tbody>
          <tr><th class="table-info">名前</th><td><%= @user.name %></td></tr>
          <tr><th class="table-info">メールアドレス</th><td><%= @user.email %></td></tr>
          <tr><th class="table-info">性別</th><td><%= @user.gender_i18n %></td></tr>
          <tr><th class="table-info">年齢</th><td><%= @user.age %>歳</td></tr>
          <tr><th class="table-info">スポーツ</th><td><%= @user.sport.name %></td></tr>
          <tr><th class="table-info">自己紹介</th><td><%= @user.introduction %></td></tr>
          <tr><th class="table-info">ユーザーステータス</th>
                <td>
                  <% if @user.is_deleted == true %>
                    <span class="text-secondary">退会</span>
                  <% elsif @user.is_deleted == false %>
                    <span class="text-success">有効</span>
                  <% end %>
                </td></tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to '編集する', edit_user_registration_path(@user.id), class:"btn btn-primary btn-lg" %>
      </btn>
    </div>
  </div>

  <div class="row">
    <div class="col-5 text-center">
      <%#= link_to 'コーチング中受講者一覧', users_index_path, class:"btn btn-success btn-lg" %>コーチング中受講者一覧ボタン作成
    </btn>
  </div>

  <div class="row">
    <div class="col-5 text-center">
      <%#= link_to 'コーチング一覧', coaching_index_path, class:"btn btn-warning btn-lg" %>コーチング一覧ボタン作成
    </btn>
  </div>

  <div class="row">
    <div class="col-5 text-center">
      <%#= link_to 'コーチング申請一覧', matching_index_path, class:"btn btn-info btn-lg" %>コーチング申請一覧ボタン作成
    </btn>
  </div>


<% end %>







