<div class="row m-3">
  <span class="h3 bg-light col-3 text-center">コーチ一覧</span>
  <div class="search-form col-5">
    <%= form_with url: users_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.hidden_field :sport_id, value: @sport_id  %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>

<div class="row m-3"><% @coaches.each do |coach| %>
  <div class="col-3">
    <%= attachment_image_tag(coach, :image , :fill, 250, 250, format: 'jpeg') %>
  </div>
  <div class="col-3">
    <table class="table">
      <tbody>
        <tr><th class="table-info">名前</th><td><%= coach.name %></td></tr>
        <tr><th class="table-info">年齢</th><td><%= coach.age %>歳</td></tr>
        <tr><th class="table-info">スポーツ</th><td><%= coach.sport.name %></td></tr>
        <tr><th class="table-info">自己紹介</th><td><%= coach.introduction %></td></tr>
        <tr><th class="table-info">ステータス</th>
              <td>
                <% if coach.is_deleted == true %>
                  <span class="text-secondary">退会</span>
                <% elsif coach.is_deleted == false %>
                  <span class="text-success">有効</span>
                <% end %>
              </td></tr>
      </tbody>
    </table>
  </div><% end %>
</div>

