<!DOCTYPE html>
<html>
  <head>
    <title>Movie-Coach</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Movie-Coach</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <% if user_signed_in? %>
            Logged in as <strong><%= current_user.name %></strong>.
              <li class="nav-item">
                <%= link_to 'スポーツ一覧', sports_index_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%#= link_to '会員一覧', admin_customers_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%= link_to 'プロフィール変更', edit_user_registration_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", sign_out_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%= link_to attachment_image_tag(current_user, :image , :fill, 75, 75, format: 'jpeg'), user_my_page_path, class: 'nav-link ml-2' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%#= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%#= link_to '会員一覧', admin_customers_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%#= link_to '注文履歴一覧', admin_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%= link_to 'サインイン', new_user_registration_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark btn btn-outline-secondary ml-2' %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <div class ="container">
        <%= yield %>
      </div>

    </main>

    <footer class="bg-cyan text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p></p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
